<UserControl
    x:Class="Scrubbler.Host.Presentation.Plugins.AutoScrobblePluginHostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scrubbler.Host.Presentation.Plugins"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <!-- Plugin or Page View -->
        <ContentPresenter Content="{Binding PluginViewModel}"
                              ContentTemplateSelector="{StaticResource ViewLocatorSelector}"/>

        <Grid Visibility="{Binding PluginViewModel.IsBusy, Converter={StaticResource BoolToVis}}" Background="#80000000" IsHitTestVisible="True">
            <ProgressRing IsIndeterminate="True" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</UserControl>
