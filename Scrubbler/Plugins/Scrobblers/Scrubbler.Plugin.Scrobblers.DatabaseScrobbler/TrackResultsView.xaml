<UserControl
    x:Class="Scrubbler.Plugin.Scrobblers.DatabaseScrobbler.TrackResultsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Scrubbler.Plugin.Scrobblers.DatabaseScrobbler"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Scrubbler.Abstractions.Controls"
    xmlns:tv="using:WinUI.TableView"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Back to albums" Command="{Binding GoBackCommand}"/>

        <controls:ScrobbleMultipleSelectorControl Grid.Row="2"/>

        <controls:ScrobbableObjectTableView Grid.Row="4"
            ItemsSource="{Binding Scrobbles}"
            AutoGenerateColumns="False"
            SelectionMode="Extended"
            CanSortColumns="True"
            Margin="8"
            RowHeight="40"
            HeaderRowHeight="32" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

            <controls:ScrobbableObjectTableView.Columns>
                <tv:TableViewTemplateColumn Header="Scrobble">
                    <tv:TableViewTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding ToScrobble, Mode=TwoWay}"/>
                        </DataTemplate>
                    </tv:TableViewTemplateColumn.CellTemplate>
                </tv:TableViewTemplateColumn>

                <tv:TableViewTextColumn
                    Header="Track"
                    Binding="{Binding TrackName}"
                    CanSort="True"
                    Width="*"/>

                <tv:TableViewTextColumn
                    Header="Artist"
                    Binding="{Binding ArtistName}"
                    CanSort="True"
                    Width="*"/>

                <tv:TableViewTextColumn
                    Header="Album"
                    Binding="{Binding AlbumName}"
                    CanSort="True"
                    Width="*"/>

                <tv:TableViewTextColumn
                    Header="Album Artist"
                    Binding="{Binding AlbumArtistName}"
                    CanSort="True"
                    Width="*"/>
            </controls:ScrobbableObjectTableView.Columns>
        </controls:ScrobbableObjectTableView>

        <controls:ScrobbleTimeControl DataContext="{Binding ScrobbleTimeVM}" Grid.Row="6"/>
    </Grid>
</UserControl>
