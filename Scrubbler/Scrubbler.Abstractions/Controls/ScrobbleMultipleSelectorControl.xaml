<UserControl
    x:Class="Scrubbler.Abstractions.Controls.ScrobbleMultipleSelectorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Scrubbler.Abstractions.Controls"
    mc:Ignorable="d"
    d:DesignHeight="400"
    d:DesignWidth="800">

    <Grid Padding="4">
        <!-- ===== Toolbar Buttons ===== -->
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button
                Content="Check All"
                Command="{Binding CheckAllCommand}"/>

            <Button
                Content="Uncheck All"
                Command="{Binding UncheckAllCommand}"/>

            <Button
                Content="Check Selected"
                Command="{Binding CheckSelectedCommand}"/>

            <Button
                Content="Uncheck Selected"
                Command="{Binding UncheckSelectedCommand}"/>

            <Button
                Content="Check 3000"
                Command="{Binding CheckFirst3000Command}"/>

            <Button
                Content="Uncheck 3000"
                Command="{Binding UncheckFirst3000Command}"/>

            <TextBlock VerticalAlignment="Center">
                <!--<TextBlock.Text>
                    <MultiBinding StringFormat="{}Num to scrobble: {0} / {1} | Selected: {2}">
                        <Binding Path="ToScrobbleCount" />
                        <Binding Path="MaxToScrobbleCount" />
                        <Binding Path="SelectedCount" />
                    </MultiBinding>
                </TextBlock.Text>-->
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
